@inherits HtmlTemplate<FailedPage.ViewModel>

@{
  Layout = new Layout();
}

<div class="p-2 text-bg-light">
  <ul class="nav nav-pills">
    <li class="nav-item">
      <a class="nav-link" href="@Routes.Options.Prefix/subscriptions">Subscriptions</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="@Routes.Options.Prefix/subscriptions/lagging">Lagging</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="@Routes.Options.Prefix/subscriptions/retries">Retries</a>
    </li>
    <li class="nav-item">
      <a class="nav-link active" aria-current="page" href="@Routes.Options.Prefix/subscriptions/failed">Failed</a>
    </li>
  </ul>
</div>

<table id="list-view"
       class="table table-striped"
       hx-get="@Routes.Options.Prefix/subscriptions/failed"
       hx-trigger="every 10s"
       hx-select="#list-view"
       hx-swap="outerHTML">
  <thead>
    <tr>
      <th>Application</th>
      <th>Name</th>
      <th>Stream Name</th>
      <th>Stream Position</th>
    </tr>
  </thead>
  <tbody>
  @foreach(var retry in Model.Failures)
  {
    <tr>
      <td>@retry.Application</td>
      <td>@retry.Name</td>
      <td>
        <a href="@Routes.Options.Prefix/subscriptions/retries/@retry.RetryId">@retry.StreamName</a>
      </td>
      <td>@retry.StreamPosition</td>
    </tr>
  }
  @if (Model.Failures.Count == 0)
  {
    <tr>
      <td colspan="4">
        No failures found.
      </td>
    </tr>
  }
  </tbody>
</table>


