@inherits HtmlTemplate

@{
  Layout = new Layout();
}

@* ReSharper disable once Razor.SectionNotResolved *@
@section Navbar {
  <ul class="navbar-nav me-auto mb-2 mb-lg-0">
    <li class="nav-item">
      <a class="nav-link active" aria-current="page" href="@Routes.Options.Prefix">Home</a>
    </li>
    @if (Routes.Options.MessageStoreEnabled)
    {
      <li class="nav-item">
        <a class="nav-link" href="@Routes.Options.Prefix/message-store">Message Store</a>
      </li>
    }
    <li class="nav-item">
      <a class="nav-link" href="@Routes.Options.Prefix/subscriptions">Subscriptions</a>
    </li>
  </ul>
  @* <form class="d-flex" role="search"> *@
  @*   <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search"> *@
  @*   <button class="btn btn-primary" type="submit">Search</button> *@
  @* </form> *@
}

<div class="row mt-4 mx-2">
  <div class="col-sm-4 mb-3 mb-sm-0">
    <div class="card">
      <div class="card-header">
        Subscription Lag
      </div>
      <div class="card-body d-flex align-items-center justify-content-center h-25"
           hx-get="@Routes.Options.Prefix/metrics/components/lag"
           hx-trigger="load">
        <p>...</p>
      </div>
    </div>
  </div>
  <div class="col-sm-4">
    <div class="card">
      <div class="card-header">
        Retries
      </div>
      <div class="card-body d-flex align-items-center justify-content-center h-25"
           hx-get="@Routes.Options.Prefix/metrics/components/retries"
           hx-trigger="load">
        <p>...</p>
      </div>
    </div>
  </div>
  <div class="col-sm-4">
    <div class="card">
      <div class="card-header">
        Failed
      </div>
      <div class="card-body d-flex align-items-center justify-content-center h-25"
           hx-get="@Routes.Options.Prefix/metrics/components/failed"
           hx-trigger="load">
        <p>...</p>
      </div>
    </div>
  </div>
</div>


