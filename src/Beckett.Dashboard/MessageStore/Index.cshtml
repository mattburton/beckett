@using System.Web
@inherits HtmlTemplate<IndexPage.ViewModel>

@{
  Layout = new Layout();
}

<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
  <ol class="breadcrumb p-3 text-bg-light rounded-3">
    <li class="breadcrumb-item active" aria-current="page">
      Stream Categories
    </li>
  </ol>
</nav>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th style="width: 20em;">Last Updated</th>
  </tr>
  </thead>
  <tbody>
  @foreach(var category in Model.Categories)
  {
    <tr>
      <td>
        <a href="@Routes.Prefix/message-store/categories/@HttpUtility.UrlEncode(category.Name)">@category.Name</a>
      </td>
      <td>
        <span class="timestamp">@category.LastUpdated</span>
      </td>
    </tr>
  }
  @if (Model.Categories.Count == 0)
  {
    <tr>
      <td colspan="2">
        No stream categories found.
      </td>
    </tr>
  }
  </tbody>
</table>


