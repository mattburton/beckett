@using System.Web
@inherits HtmlTemplate<IndexPage.ViewModel>

@{
  Layout = new Layout();

  var urlTemplate = $"{Routes.Prefix}/message-store?page={{0}}&pageSize={{1}}";
}

<nav style="--bs-breadcrumb-divider: '>';" class="bg-body-tertiary" aria-label="breadcrumb">
  <div class="d-flex justify-content-between">
    <ol class="breadcrumb p-3 mb-0 rounded-3">
      <li class="breadcrumb-item active" aria-current="page">
        Stream Categories
      </li>
    </ol>
    @(new Paging((Model, urlTemplate)))
  </div>
</nav>

<div class="p-2">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Name</th>
      <th style="width: 16em;">Last Updated</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var category in Model.Categories)
    {
      <tr>
        <td>
          <a href="@Routes.Prefix/message-store/categories/@HttpUtility.UrlEncode(category.Name)">@category.Name</a>
        </td>
        <td>
          <span class="timestamp">@category.LastUpdated.ToString("O")</span>
        </td>
      </tr>
    }
    @if (Model.Categories.Count == 0)
    {
      <tr>
        <td colspan="2">
          No stream categories found.
        </td>
      </tr>
    }
    </tbody>
  </table>
</div>
