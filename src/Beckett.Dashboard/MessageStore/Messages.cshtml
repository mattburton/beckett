@using System.Web
@inherits HtmlTemplate<MessagesPage.ViewModel>

@{
  Layout = new Layout();
  DateTimeOffset? previousTimestamp = null;
}

<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
  <ol class="breadcrumb p-3 text-bg-light rounded-3">
    <li class="breadcrumb-item">
      <a class="link-body-emphasis fw-semibold" href="@Routes.Prefix/message-store">
        Stream Categories
      </a>
    </li>
    <li class="breadcrumb-item">
      <a class="link-body-emphasis fw-semibold" href="@Routes.Prefix/message-store/categories/@HttpUtility.UrlEncode(Model.Category)">
        @Model.Category
      </a>
    </li>
    <li class="breadcrumb-item active" aria-current="page">
      @Model.StreamName
    </li>
  </ol>
</nav>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th style="width: 10em;">Stream Position</th>
      <th>Type</th>
      <th style="width: 20em;">Timestamp</th>
    </tr>
  </thead>
  <tbody>
  @foreach(var message in Model.Messages)
  {
    var currentTimestamp = message.Timestamp;
    var timeOffset = previousTimestamp.HasValue ? (currentTimestamp - previousTimestamp.Value).ToString(@"hh\:mm\:ss\.fff") : "";
    previousTimestamp = currentTimestamp;

    <tr>
      <td>
        <a href="@Routes.Prefix/message-store/messages/@message.Id">@message.Id</a>
      </td>
      <td>@message.StreamPosition</td>
      <td>@message.Type</td>
      <td>
        <span class="timestamp">@message.Timestamp</span>
        @if (!string.IsNullOrEmpty(timeOffset))
        {
        <small class="text-muted"> +@timeOffset</small>
        }
      </td>
    </tr>
  }
  @if (Model.Messages.Count == 0)
  {
    <tr>
      <td colspan="4">
        No stream messages found.
      </td>
    </tr>
  }
  </tbody>
</table>


