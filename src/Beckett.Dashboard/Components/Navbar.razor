<ul class="navbar-nav me-auto mb-2 mb-lg-0 align-items-center">
  <li class="nav-item">
    <a class="nav-link @(Area == Area.Home ? "active" : "")"
       aria-current="page"
       href="@Dashboard.Prefix">
      Home
    </a>
  </li>
  @if (Dashboard.Options.MessageStoreEnabled)
  {
    <li class="nav-item">
      <a class="nav-link @(Area == Area.MessageStore ? "active" : "")"
         href="@Dashboard.Prefix/message-store">
        Message Store
      </a>
    </li>
  }
  <li class="nav-item">
    <a class="nav-link @(Area == Area.Subscriptions ? "active" : "")"
       href="@Dashboard.Prefix/subscriptions">
      Subscriptions
    </a>
  </li>
  <li class="nav-item">
    <a href="@Dashboard.Prefix/subscriptions/lagging"
       class="badge text-bg-info text-decoration-none"
       title="Lagging Subscriptions"
       hx-get="@Dashboard.Prefix/metrics/lag"
       hx-trigger="load, every 10s">
      0
    </a>
    <a href="@Dashboard.Prefix/subscriptions/retries"
       class="badge text-bg-warning text-decoration-none"
       title="Retries"
       hx-get="@Dashboard.Prefix/metrics/retries"
       hx-trigger="load, every 10s">
      0
    </a>
    <a href="@Dashboard.Prefix/subscriptions/failed"
       class="badge text-bg-danger text-decoration-none"
       title="Failed"
       hx-get="@Dashboard.Prefix/metrics/failed"
       hx-trigger="load, every 10s">
      0
    </a>
  </li>
</ul>

@code {

  [Parameter, EditorRequired]
  public required Area Area { get; set; }

}
